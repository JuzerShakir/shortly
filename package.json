{
  "name": "shortly",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch": "tailwindcss -i ./input.css -o ./css/style.css --watch",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch",
    "compile": "tailwindcss -i ./input.css -o ./css/style.comp.css",
    "prefix": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress": "tailwindcss -i css/style.prefix.css -o css/style.css --minify",
    "build": "npm-run-all compile prefix compress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JuzerShakir/shortly.git"
  },
  "keywords": [
    "tailwindcss",
    "grid",
    "flex",
    "css3"
  ],
  "author": "Juzer Shakir",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JuzerShakir/shortly/issues"
  },
  "homepage": "https://github.com/JuzerShakir/shortly#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.15",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tailwindcss": "^3.3.3"
  }
}
